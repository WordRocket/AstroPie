---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Hero from "~/components/Hero.astro";
import { Picture, Image } from "astro:assets";
import Badge from "~/components/Badge.astro";
import Button from "~/components/Button.astro";
import ButtonCallUs from "~/components/ButtonCallUs.astro";
import Grid from "~/components/Grid.astro";
import Heading from "~/components/Heading.astro";
import WideImage from "~/components/WideImage.astro";

// Images
import ReubenBurger from "~/assets/images/whatsapp_image_2025-12-12_at_11.12.35_am_(1) copy.jpeg";
import StoreFront from "~/assets/unnamed.webp";
import MenuClassicDeli from "~/assets/images/whatsapp_image_2025-12-12_at_11.11.25_am_(1).jpeg";
import MenuGourmetSandwiches from "~/assets/images/whatsapp_image_2025-12-12_at_11.11.25_am_(2).jpeg";
import MenuBreakfast from "~/assets/images/whatsapp_image_2025-12-12_at_11.11.25_am_(3).jpeg";
import MenuBurgers from "~/assets/images/whatsapp_image_2025-12-12_at_11.11.25_am.jpeg";

import { cateringInfo } from "~/data/config";
---

<Layout
	title="Gourmet Deli & Catering - Fresh Sandwiches, Soups & Salads"
	pageTitle="Gourmet Deli & Catering Company | Ontario"
	description="Experience the finest gourmet sandwiches, hearty soups, and fresh salads. Full-service catering available. Using clean ingredients for made-to-order quality food.">

	<!-- Hero Section -->
	<Section class:list={"bg-gradient-to-br from-brand-cream via-white to-brand-cream/50"}>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none max-lg:order-1">
				<Badge title="üçΩÔ∏è Gourmet Quality" />
				<h1 class="font-black text-brand-dark !leading-tight">Fresh, Delicious, Made Just for You</h1>

				<p class="text-xl text-gray-700">
					Experience gourmet dining with our made-to-order sandwiches, hearty homemade soups, and fresh salads.
					We use clean, quality ingredients to create unforgettable meals every single day.
				</p>

				<div class="not-prose space-y-3 my-6">
					<div class="flex items-center gap-3">
						<span class="text-2xl">ü•™</span>
						<span class="text-brand-brown font-semibold text-lg">Savoury Gourmet Sandwiches</span>
					</div>
					<div class="flex items-center gap-3">
						<span class="text-2xl">üç≤</span>
						<span class="text-brand-brown font-semibold text-lg">Almost 100 Soup Varieties</span>
					</div>
					<div class="flex items-center gap-3">
						<span class="text-2xl">ü•ó</span>
						<span class="text-brand-brown font-semibold text-lg">Fresh Traditional & Gourmet Salads</span>
					</div>
					<div class="flex items-center gap-3">
						<span class="text-2xl">üçî</span>
						<span class="text-brand-brown font-semibold text-lg">Gourmet Burgers & Hot Dogs</span>
					</div>
				</div>

				<div class="mt-8 flex flex-wrap items-center gap-4">
					<a href="/menu" class="button button-brown inline-flex items-center gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
							<path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
							<path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
						</svg>
						View Full Menu
					</a>
					<ButtonCallUs />
				</div>
			</div>
			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto rounded-2xl shadow-2xl hover:shadow-3xl transition-shadow duration-300"}
					src={ReubenBurger}
					height={600}
					formats={["avif", "webp"]}
					alt="Our Famous Reuben Burger"
					loading={"eager"}
					fetchpriority={"high"}
				/>
			</div>
		</Hero>
	</Section>

	<!-- All Day Specials Section -->
	<Section class:list={"bg-white"}>
		<Heading>
			<h2 slot="heading-title" class="font-black text-brand-brown h2">All Day Every Day Specials</h2>
			<p slot="heading-content" class="text-xl">
				From breakfast to dinner, we serve fresh, delicious meals all day long. Every dish is crafted with care
				using quality ingredients.
			</p>
		</Heading>

		<Grid>
			<div slot="grid-content-1">
				<div class="flex flex-col items-center text-center">
					<div class="w-full h-64 bg-gradient-to-br from-brand-yellow/20 to-brand-gold/20 rounded-2xl flex items-center justify-center mb-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
						<span class="text-8xl">ü•™</span>
					</div>
					<h3 class="h4 mt-0 font-black text-brand-dark">Savoury Sandwiches</h3>
					<p class="text-gray-600 text-lg px-4">
						Using "clean" food items to produce the best quality made-to-order gourmet sandwiches.
						From classic delis to innovative creations.
					</p>
				</div>
			</div>

			<div slot="grid-content-2">
				<div class="flex flex-col items-center text-center">
					<div class="w-full h-64 bg-gradient-to-br from-brand-rust/20 to-brand-brown/20 rounded-2xl flex items-center justify-center mb-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
						<span class="text-8xl">üç≤</span>
					</div>
					<h3 class="h4 mt-0 font-black text-brand-dark">Hearty Soups</h3>
					<p class="text-gray-600 text-lg px-4">
						Our in-house chef produces almost a hundred varieties of from-scratch creations to satisfy your soul.
						Made fresh daily with love.
					</p>
				</div>
			</div>

			<div slot="grid-content-3">
				<div class="flex flex-col items-center text-center">
					<div class="w-full h-64 bg-gradient-to-br from-brand-green/20 to-emerald-200/40 rounded-2xl flex items-center justify-center mb-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
						<span class="text-8xl">ü•ó</span>
					</div>
					<h3 class="h4 mt-0 font-black text-brand-dark">Fresh Salads</h3>
					<p class="text-gray-600 text-lg px-4">
						Taking every palate into consideration - gluten-free, vegan, vegetarian, and more.
						Traditional and gourmet options designed for everyone.
					</p>
				</div>
			</div>
		</Grid>
	</Section>

	<!-- Menu Showcase Section -->
	<Section class:list={"bg-gradient-to-br from-brand-cream/30 to-white"}>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none lg:order-2">
				<Badge title="üçî Gourmet Burgers" />
				<h2 class="font-black text-brand-dark h2">Our Signature Burgers</h2>

				<p class="text-lg text-gray-700">
					Sink your teeth into our gourmet burger selection featuring premium ingredients and
					creative flavor combinations. From classic beef patties to specialty options, each burger
					is crafted to perfection.
				</p>

				<p class="text-lg text-gray-700">
					Choose from our signature creations like the Reuben Burger with corned beef and Russian dressing,
					or the Teriyaki Burger with mushrooms and mozzarella. Every bite is a flavor explosion.
				</p>

				<div class="mt-8 not-prose">
					<a href="/menu" class="button button-brown inline-flex items-center gap-2">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 20 20"
							fill="currentColor"
							class="size-5"
							aria-hidden="true"
						>
							<path
								fill-rule="evenodd"
								d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z"
								clip-rule="evenodd"></path>
						</svg>
						Explore Our Menu
					</a>
				</div>
			</div>
			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto rounded-2xl shadow-xl"}
					src={MenuBurgers}
					height={600}
					formats={["avif", "webp"]}
					alt="Gourmet Burger Menu"
				/>
			</div>
		</Hero>
	</Section>

	<!-- Breakfast Section -->
	<Section class:list={"bg-white"}>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none max-lg:order-1">
				<Badge title="‚òÄÔ∏è Breakfast" />
				<h2 class="font-black h2 !my-4 text-brand-dark">Start Your Day Right</h2>

				<span class="text-brand-yellow text-2xl font-bold">Breakfast served until 11:30 AM</span>

				<p class="text-lg text-gray-700">
					Wake up to our delicious breakfast offerings. From hearty breakfast bowls to classic sandwiches,
					we have everything you need to fuel your morning. Choose from our Corned Beef Slammer, Breakfast Bowl,
					or signature breakfast burritos.
				</p>

				<p class="text-lg text-gray-700">
					All breakfast items are made fresh to order using quality ingredients. Start your day with
					a satisfying meal that will keep you energized.
				</p>

				<div class="mt-8 not-prose">
					<a href="/menu" class="button button-yellow inline-flex items-center gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
							<path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
							<path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
						</svg>
						View Breakfast Menu
					</a>
				</div>
			</div>
			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto rounded-2xl shadow-xl"}
					src={MenuBreakfast}
					height={600}
					formats={["avif", "webp"]}
					alt="Breakfast Menu"
				/>
			</div>
		</Hero>
	</Section>

	<!-- Catering Section -->
	<Section class:list={"bg-gradient-to-br from-brand-brown/10 via-brand-cream/30 to-brand-yellow/10 relative"}>
		<div class="py-16">
			<div class="text-center max-w-4xl mx-auto">
				<Badge title="üéâ Catering Services" />
				<h2 class="font-black h2 text-brand-dark mt-4 mb-6">Full-Service Catering Available</h2>
				<p class="text-xl text-gray-700 mb-8">
					Let us cater your next event with our delicious gourmet offerings. From corporate lunches to
					special celebrations, we provide exceptional food and service for any occasion.
				</p>

				<div class="grid md:grid-cols-2 gap-8 text-left mb-12">
					<div class="bg-white rounded-2xl p-8 shadow-lg">
						<div class="flex items-start gap-4">
							<div class="text-4xl">üìû</div>
							<div>
								<h3 class="font-bold text-2xl text-brand-dark mb-2">Catering Hotline</h3>
								<a href="tel:+15192047252" class="text-2xl font-bold text-brand-brown hover:text-brand-rust transition-colors">
									{cateringInfo.hotline}
								</a>
								<p class="text-gray-600 mt-2">Call us during business hours</p>
							</div>
						</div>
					</div>

					<div class="bg-white rounded-2xl p-8 shadow-lg">
						<div class="flex items-start gap-4">
							<div class="text-4xl">üì±</div>
							<div>
								<h3 class="font-bold text-2xl text-brand-dark mb-2">After Hours</h3>
								<a href="tel:+15197771065" class="text-2xl font-bold text-brand-brown hover:text-brand-rust transition-colors">
									519-777-1065
								</a>
								<p class="text-gray-600 mt-2">Call Thomas directly</p>
							</div>
						</div>
					</div>
				</div>

				<div class="bg-white rounded-2xl p-8 shadow-lg inline-block">
					<p class="text-lg text-gray-700 mb-2">
						<span class="font-bold text-brand-dark">Minimum for delivery:</span>
						<span class="ml-2 text-2xl font-bold text-brand-brown">{cateringInfo.minimumDelivery}</span>
					</p>
				</div>
			</div>
		</div>

		<svg
			xmlns="http://www.w3.org/2000/svg"
			viewBox="0 0 1440 320"
			class="absolute h-40 w-full top-0 inset-x-0 rotate-180"
			preserveAspectRatio="none"
			><path
				fill="#ffffff"
				fill-opacity="1"
				d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
			></path>
		</svg>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			viewBox="0 0 1440 320"
			class="absolute h-40 w-full bottom-0 inset-x-0"
			preserveAspectRatio="none"
			><path
				fill="#ffffff"
				fill-opacity="1"
				d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
			></path>
		</svg>
	</Section>

	<!-- Store Showcase -->
	<Section class:list={"bg-white"}>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none order-2">
				<Badge title="üè™ Visit Our Deli" />
				<h2 class="font-black text-brand-dark h2 !my-4">Your Neighborhood Gourmet Destination</h2>
				<div>
					<p class="text-lg text-gray-700">
						Step into our welcoming deli where quality meets tradition. Our well-stocked displays feature
						an incredible selection of gourmet products, fresh ingredients, and house-made specialties that
						showcase our commitment to excellence.
					</p>

					<p class="text-lg text-gray-700">
						From our extensive deli counter to our specialty items and catering services, everything is
						designed to provide you with the finest gourmet experience. Come visit us and discover why
						we're Ontario's favorite deli destination.
					</p>

					<div class="mt-8 not-prose">
						<a href="/contact" class="button button-brown">
							Find Us
						</a>
					</div>
				</div>
			</div>

			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300"}
					src={StoreFront}
					height={600}
					formats={["avif", "webp"]}
					alt="Gourmet Deli Store Interior"
				/>
			</div>
		</Hero>
	</Section>

	<!-- Final CTA Section -->
	<Section class:list={"bg-gradient-to-br from-brand-brown to-brand-rust text-white"}>
		<div class="text-center max-w-4xl mx-auto py-16">
			<h2 class="font-black h2 mb-6">Ready to Experience Gourmet Quality?</h2>
			<p class="text-xl mb-8 text-white/90">
				Visit us today or call to place your order. We're here to serve you delicious, made-to-order meals
				all day, every day.
			</p>

			<div class="flex flex-wrap gap-4 justify-center items-center mb-8">
				<a href="tel:+15192047252" class="button bg-white text-brand-brown hover:bg-gray-100 inline-flex items-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
						<path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
					</svg>
					519-204-7252
				</a>
				<a href="/menu" class="button button-yellow">
					Browse Menu
				</a>
				<a href="/contact" class="button bg-transparent border-2 border-white text-white hover:bg-white hover:text-brand-brown">
					Contact Us
				</a>
			</div>

			<div class="text-white/80 text-sm">
				<p>Open All Day, Every Day</p>
				<p>WhatsApp Available: 519-204-7252</p>
			</div>
		</div>
	</Section>
</Layout>
